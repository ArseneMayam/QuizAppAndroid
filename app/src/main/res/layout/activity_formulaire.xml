<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arsene.quizappandroid.FormulaireActivity"
    android:background="@drawable/img_formulaire"
    >

    <TextView
        android:id="@+id/tvPrenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edPrenom"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/edNom"
        android:layout_toStartOf="@+id/edNom"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="26sp"
        android:text="Prenom" />

    <EditText
        android:id="@+id/edPrenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="102dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_blue_dark"
        android:backgroundTint="@android:color/holo_blue_dark"
       />

    <TextView
        android:id="@+id/tvNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPrenom"
        android:layout_alignStart="@+id/tvPrenom"
        android:layout_centerVertical="true"
        android:text="Nom"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/edNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvNom"
        android:layout_alignLeft="@+id/edPrenom"
        android:layout_alignStart="@+id/edPrenom"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/tvPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnContinuer"
        android:layout_alignLeft="@+id/tvNom"
        android:layout_alignStart="@+id/tvNom"
        android:layout_marginBottom="40dp"
        android:text="Mot de passe"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/edPw"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPw"
        android:layout_alignEnd="@+id/edNom"
        android:layout_alignRight="@+id/edNom"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@android:color/holo_blue_dark" />


    <Button
        android:id="@+id/btnContinuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp"
        android:background="@android:color/black"
        android:text="Continuer"
        android:textColor="@android:color/holo_blue_dark" />


</RelativeLayout>
